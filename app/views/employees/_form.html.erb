<%= render "layouts/errors",obj:@employee %>
<div class="row">
<div class="col-xs-12">
<%= form_for @employee do |f| %>
 <div class="form-group">
<%= f.label :employeename, "Employee Name" %> 
<%= f.text_field :employeename,class:"form-control" %>
</div>
<div class="form-group">
<%= f.label :designation %>
<%= f.text_field :designation,class:"form-control" %>
</div>
<div class="form-group">
<%= f.label :phone %>
<%= f.text_field :phone,class:"form-control" %>
</div>
<div class="form-group">
<%= f.submit  class: "btn btn-primary" %>
<% end %>
 <%= link_to "Back to Employees list", employees_path, class: "btn btn-primary" %> 
 </div>
</div>
</div>